@model HearMe.BLL.DTM.SongDTM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <h3>Add new Song</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
    <label asp-for="SongPath"></label>
    <input type="file" name="songfile" asp-for="SongPath" />

    <label asp-for="PreviewPath"></label>
    <input type="file" name="previewfile" asp-for="PreviewPath" />

    <label>Select genre</label>
    <select asp-for="GenreId" asp-items= "ViewBag.GenreId"></select>

    <input type="hidden" asp-for="UserId" value = "@ViewBag.UserId"/>
    <div class="buttons">
        <button type="submit" class="btn btn-primary">Add song</button>
        <button><a asp-action="Index" asp-controller="Song">Back to List</a></button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
