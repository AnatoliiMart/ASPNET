@model HearMe.BLL.DTM.SongDTM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SongPath" class="control-label"></label>
        <input type="file" name="songfile" asp-for="SongPath" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PreviewPath" class="control-label"></label>
        <input type="file" name="previewfile" asp-for="PreviewPath" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreId" class="control-label"></label>
        <select asp-for="GenreId" asp-items= "ViewBag.GenreId" class="form-control" ></select>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="UserId" value = "@ViewBag.UserId" class="form-control"/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add song</button>
    </div>
</form>


<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
