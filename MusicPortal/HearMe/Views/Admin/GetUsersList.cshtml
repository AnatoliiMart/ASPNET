@model IEnumerable<HearMe.BLL.DTM.UserDTM>

@{
    ViewData["Title"] = "GetUsersList";
}

<div class="users">
    @if (TempData["SM"] != null)
    {
        <div class="alert alert-success">
            @TempData["SM"]
        </div>
    }
    <h3>Users List</h3>
    @if (!Model.Any())
    {
        <h2>No users</h2>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="user-container">
                <img src="@item.AvatarPath" alt="no avatar" />
                <div class ="user-info">
                    <h4 class="full-name">@item.FirstName&nbsp;@item.LastName</h4>
                    <div class="login-info">
                        <h4>Login:&nbsp;</h4>
                        <h4 class="login">@item.Login</h4>
                    </div>
                </div>
                <div class="buttons">
                    <a asp-action="EditUser" asp-route-id="@item.Id" class="button submit-btn">Edit user</a>
                    <a asp-action="UserDetails" asp-route-id="@item.Id" class=" button submit-scnd-btn">User details</a>
                    <a asp-action="DeleteUser" asp-route-id="@item.Id" class="button reject-btn">Delete</a>
                </div>
            </div>
        }
    }
</div>