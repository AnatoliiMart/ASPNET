@model IEnumerable<HearMe.BLL.DTM.GenreDTM>

@{
    ViewData["Title"] = "Index";
}
<div class="genre-container">
<h1>Genres list</h1>

<p>
    <a asp-action="CreateGenre">Add new genre</a>
</p>

@foreach (var item in Model) {
    <div class="genre">
       <h3>@item.Name</h3>
        <div class="buttons">
            <button><a asp-action="EditGenre" asp-controller="Genre" asp-route-id="@item.Id">Edit</a></button>
            <button><a asp-action="DeleteGenre" asp-controller="Genre" asp-route-id="@item.Id">Delete</a></button>
        </div>
    </div>
    }
</div>