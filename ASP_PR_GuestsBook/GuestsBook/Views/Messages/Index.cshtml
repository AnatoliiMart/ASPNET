@model IEnumerable<GuestsBook.Models.Message>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Context.Session.GetString("LastName") != null
    && Context.Session.GetString("FirstName") != null)
{
    <p>
        <a asp-action="Create" class="btn btn-info">Create New Message</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mesage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mesage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Login)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
